<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Person Name"
            android:layout_alignParentLeft="true"
            android:textColor="#212121"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Person Name"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_pname"
            android:textColor="#212121"/>

        <com.fashion.krish.customview.TintableImageView
            android:id="@+id/img_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete_address"/>

        <com.fashion.krish.customview.TintableImageView
            android:id="@+id/img_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/img_delete"
            android:src="@drawable/edit_address"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lay_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_address_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Street Address, Street Address 1"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/txt_address_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="City - Postal Code"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/txt_address_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="State, Country"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/txt_address_ph_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="T. No. : +91 9898098980"
            android:textColor="#212121"/>

    </LinearLayout>

        <TextView
            android:id="@+id/txt_p_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="person.email@gmail.com"
            android:textColor="#212121"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            android:visibility="gone"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/lay_address_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"/>


        <LinearLayout
            android:id="@+id/lay_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lay_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginRight="3dp">

                <com.rey.material.widget.Button
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="2dp">

                <com.rey.material.widget.Button
                    android:id="@+id/btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

        </LinearLayout>


</LinearLayout>
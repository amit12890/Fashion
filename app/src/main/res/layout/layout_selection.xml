<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_spinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button Shape"
        android:textColor="#000000"
        android:textStyle="bold" />

    <com.rey.material.widget.Spinner
        android:id="@+id/spin_selection"
        style="@style/Material.Widget.Spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:rd_style="@style/Material.Drawable.Ripple.Wave" />

    <LinearLayout
        android:id="@+id/lay_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_qty_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_qty"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="QTY :"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.rey.material.widget.EditText
                android:id="@+id/et_qty"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_qty"
                android:background="@drawable/black_rounded_rect" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_price_tier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Text"/>

    <TextView
        android:id="@+id/txt_selection_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="This is a required field"
        android:textColor="#ff0000"
        android:visibility="gone" />

    <View
        android:id="@+id/view_seperater"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#cccccc" />

</LinearLayout>
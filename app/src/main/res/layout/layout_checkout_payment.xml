<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_checkout_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lay_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_card"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_select_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Payment Methods"
                    android:textColor="#212121"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/lay_payment_methods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_select_address_label"
                    android:orientation="vertical" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_payment_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_card"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_continue_payment_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/lay_shipping_methods"
                android:layout_margin="10dp"
                android:background="@color/drawer_pressed"
                android:orientation="horizontal">

                <com.rey.material.widget.Button
                    android:id="@+id/btn_continue_payment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ffffff"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    android:translationZ="2dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>




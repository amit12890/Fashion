<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:orientation="vertical">

    <View
        android:id="@+id/view_sep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/lay_productview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_product_main"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/placeholder" />



        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="#e5e5e5"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/img_product_main"/>




        <com.fashion.krish.customview.AutoFitTextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/img_product_main"
            android:layout_marginTop="15dp"
            android:text="Product Name"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="#212121" />


        <TextView
            android:id="@+id/txt_product_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_product_name"
            android:layout_toRightOf="@+id/img_product_main"
            android:layout_marginLeft="10dp"
            android:text="Qty : "
            android:textSize="14sp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/txt_product_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_product_name"
            android:layout_toRightOf="@+id/txt_product_qty"
            android:layout_marginLeft="10dp"
            android:text="Subtotal: "
            android:textSize="14sp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:id="@+id/lay_item_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/txt_product_qty"
            android:layout_toRightOf="@+id/img_product_main"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>



</LinearLayout>
<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
    </style>-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="dropDownListViewStyle">@style/OverFlowListVew</item>
        <item name="textAppearanceLargePopupMenu">@style/OverFlowTextStyle</item>

    </style>

    <style name="SliderActivityTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
        <item name="android:listSelector">#E91E63</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/drawer_arrow_second_color</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="ActionBar.TitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PopupMenu" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:panelFullBackground">#ffffff</item>
        <item name="android:textColor">@drawable/select_gray_white</item>
    </style>


    <style name="overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@null</item>
        <item name="android:height">30dp</item>

    </style>

    <style name="PagerSlidingTabStripStyle" parent="">
        <item name="android:textColorPrimary">#F48EB1</item>
    </style>

    <style name="OverflowMenu" parent="Base.Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">true</item>
    </style>

    <style name="OverFlowListVew" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/button_red_white_ripple</item>
        <item name="android:divider">#eaeaea</item>
        <item name="android:textAppearance">@style/OverFlowTextStyle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OverFlowTextStyle" parent="android:TextAppearance.Holo.Widget.PopupMenu">
        <item name="android:textColor">@drawable/popup_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RaiseWaveColorButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@color/drawer_pressed</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">1dp</item>
        <item name="rd_topPadding">1dp</item>
        <item name="rd_rightPadding">1dp</item>
        <item name="rd_bottomPadding">2dp</item>
    </style>

</resources>
